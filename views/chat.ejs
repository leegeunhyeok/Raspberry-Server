<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
        <title>Rastro 채팅방</title>
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/chat.css" rel="stylesheet">
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row"> 
                <div class="no-padding">
                    <div class="top">
                        <button class="btn btn-defualt" id="back-btn">&lt;</button>
                        <div class="hide">
                            <div id="name"><%= name %></div>
                            <div id="id"><%= id %></div>
                        </div>
                        <button class="btn btn-defualt" id="list-btn" data-toggle="modal" data-target="#list">&#61;</button>
                        <!-- Modal -->
                        <div id="list" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title text-center">접속자 목록</h4>
                                    </div>
                                    <div class="user-list-wrap">
                                        <ul class="list-group" id="users">
                                            <!-- User list -->
                                        </ul>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="conversation" class="chat-main">
                        <!-- Chat list -->
                    </div>
                    <div class="bottom">  
                        <div class="input-group col-xs-12 col-lg-12">
                            <input id="text-area" type="text" class="form-control" name="msg" placeholder="Msg">
                            <button id="send-btn" class="btn btn-warning btn-md form-control">전송</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/chat.js"></script>
    </body>
</html>
